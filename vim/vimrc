set nocompatible
set ttimeout timeoutlen=3000 ttimeoutlen=50
set timeout
set autoread
set laststatus=2
set ruler
set backspace=indent,eol,start
set nobackup
set wildmenu
set incsearch
set smartindent
set showcmd
filetype plugin indent on
syntax on
set number relativenumber
set ignorecase
set smartcase
set confirm
set autowrite
set undofile
set undodir=~/.local/share/vim/undo//
set viminfo+=n~/.local/share/vim/viminfo
set directory=~/.local/share/vim/swp//
set completeopt=menuone
set scrolloff=3
set shiftwidth=4
set tabstop=4 softtabstop=4
set expandtab
set t_Co=16

" make the 81st column stand out, and delete trailing whitespace on save
augroup highlighting
    autocmd!
    autocmd Colorscheme * highlight BackgroundWarning ctermbg=9 guibg=#be5046
    autocmd Colorscheme * match BackgroundWarning /\%81v/
    autocmd BufWrite * %s/\s\+$//e
augroup END

"======================== remaps ============================================
let mapleader =" "
nnoremap s <C-w>
nnoremap <expr> <C-l> :nohlsearch
nnoremap ]q :cnext<CR>
nnoremap [q :cprev<CR>
nnoremap ]b :bnext<CR>
nnoremap [b :bprev<CR>
nnoremap ]f :cnfile<CR>
nnoremap [f :cpfile<CR>
nnoremap <silent> <Leader>r :call system('/usr/local/bin/ctags -R')<CR>
nnoremap <Leader>b :ls<CR>:b<Left>
nnoremap \ :grep<space>
nnoremap <Leader>f :find<space>*


hi! Normal ctermbg=NONE guibg=NONE
hi! NonText ctermbg=NONE guibg=NONE
