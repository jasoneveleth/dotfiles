[core]
	excludesfile = /Users/jason/.config/git/gitignore_global
	pager = delta --diff-so-fancy
[user]
	name = Jason Eveleth
	email = jj11@eveleth.com
[color]
	ui = auto
[alias]
	alias = !git config -l | grep '^alias.' | cut -d'.' -f2
	amend = commit --amend --no-edit
	reword = commit --amend
	rename-branch = branch -m
	create-branch = checkout -b
	unadd = restore --staged
	dirty = !test -n "$(git status --porcelain)"
	wip = !git add --all && git commit -m 'wip'
	ff = merge --ff-only
	pullff = pull --ff-only
	root = rev-parse --show-toplevel
	wip = commit -am wip
	head-ref = !git symbolic-ref HEAD | cut -d/ -f3-
	save = !sh -c 'export PREV="$(git head-ref)" && git create-branch "$1" && git commit -am "$1" && git checkout "$PREV"'
	update-cwd = !git checkout $1 .
[pull]
	rebase = true
[diff]
	algorithm = minimal
[init]
	defaultBranch = main
[interactive]
	diffFilter = delta --diff-so-fancy
[rebase]
	autosquash = true
[advice]
	detached = head
# Enforce SSH
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[url "ssh://git@gitlab.com/"]
	insteadOf = https://gitlab.com/
[url "ssh://git@bitbucket.org/"]
	insteadOf = https://bitbucket.org/
[gc]
	autodetach = false
	pruneExpire = never
	reflogExpire = never
[commit]
	verbose = true
[merge]
	ff = no

# Diff viewer
[delta]
    features = decorations

[delta "interactive"]
    keep-plus-minus-markers = false

[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax
