#!/bin/sh

# update bookmarks file
#
# this will commit any changes to the bookmarks, and is smart enough to not
# update if nothign changed

cd "$HOME"/dev/web/bookmarks/

if [ -z "`git status -s`" ]; then
    printf "nothing in diff\n"
    exit
fi


echo "y" | ./markup.py > /dev/null
git add index.html input.md
# git commit -m "`git diff --no-color --minimal --word-diff input.md | grep -vE 'input\.md|input|@@|index [0-9]+'`"
git commit -m "auto commit"
git push
