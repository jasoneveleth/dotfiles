#!/bin/zsh

alias ovim="/usr/bin/vim -u ~/.config/vim/vimrc"
alias vim="nvim"
alias ta="tmux a -t"
alias directoryPrompt="PS1=\"[%~]\"$'\n'\" $ \""
alias oldPrompt="PS1='%{%K{0}%F{255}%}%m%{%f%k%} %~ $ '"
alias vsPrompt="PS1='%{%F{075}%}%1d%{%f%} $ '"
alias cleanDS="find . -name '*.DS_Store' -type f -delete"
alias ctags="/usr/local/bin/ctags"
alias py="/usr/local/bin/python3.8"
alias ls='\ls -FGA'
alias l='ls -l'
alias vimrc='nvim ~/.config/nvim/init.vim'
alias grep='grep --color=auto'
alias path='echo $PATH | tr -s ":" "\n"'
alias zshrc='vim ~/.config/zsh/.zshrc'
alias ql='qlmanage -p'

alias commit='git commit -m'
alias add='git add -A'

alias nist="cd ~/code/python/nistsurf"
alias bump='cd ~/Dropbox/bump/'
alias tnist="tmux a -t nist"
alias tbump="tmux a -t bump"
